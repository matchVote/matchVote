!!! 5
%html
  %head
    %title matchVote
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = favicon_link_tag "http://matchvote.com/wp-content/uploads/2015/01/favicon.gif"

  %body
    - if user_signed_in?
      = render "layouts/header"
    .container
      - flash.each do |key, value|
        = flash_content(key, value)
      = yield

var $articleList = $("#article-list")

<% render_articles(@articles, @comment_limit, @reply_limit).each do |article| %>
  $articleList.append("<%= j article %>");
<% end %>

<% if @articles.next_page %>
  $(".pagination").replaceWith("<%= j will_paginate(@articles, style: 'display:none') %>");
<% else %>
  $(".pagination").remove();
<% end %>

.row
  .col-md-8
    .jumbotron
      %h2 Automatically follow the political positions and news for 1,337 elected officials in the US
      %p.introtext
        matchVote keeps you up-to-date with what's happening in politics by finding the politicians that agree and disagree with what's important to you. Get notifications when elected officials change their positions:
        %strong
          %ul
            %li 9 US Presidential Candidates
            %li 435 US Senators & Representatives
            %li 666 State Senators & Representatives
            %li 227 Mayors & City Councilors
      %div
        = link_to "#" do
          %button.btn.btn-lg.btn-danger Get Started

  .col-md-1

  .col-md-3
    %br
    %br
    %br
    %h2 Login
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %div= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control"
      %div= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control"
      - if devise_mapping.rememberable?
        %div
          = f.check_box :remember_me
          = f.label :remember_me
      %br
      %div= f.submit "Sign In", class: ["btn","btn-primary"]
    %br
    %br
    = render "devise/shared/links"

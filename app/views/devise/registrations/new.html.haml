= render "layouts/preloginheader"
.row
  .col-md-4
  .col-md-6
    %br
    %br
    %br
    %h2 Join matchVote
    .col-md-6.form-group
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        %div= f.text_field :username, class: "form-control", autofocus: true, placeholder: "Username"
        %div= f.email_field :email, class: "form-control", placeholder: "Email"
        %div
          = f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password"
          - if @validatable
            %i Must be at least #{@minimum_password_length} characters.
        %div
          = f.password_field :password_confirmation, class: "form-control", autocomplete: "off",
            placeholder: "Confirm password"
        %div
          = f.check_box :rep_admin
          = f.label "I am an Elected Official"
        %div= f.text_field :rep_name, class: "form-control", placeholder: "Representative Name"
        %br
        %div= f.submit "Create Account", class: "btn btn-primary"

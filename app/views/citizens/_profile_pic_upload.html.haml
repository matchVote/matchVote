.fileinput.fileinput-new{data: { provides: "fileinput" }}
  .fileinput-preview{data: { trigger: "fileinput" }}
    = image_tag citizen.profile_pic_url,
      class: "edit_pic", id: "profile_pic_preview"
  .row
    .col-md-6
      %span.btn.btn-default.btn-file
        %span.fileinput-new Select Image
        %span.fileinput-exists Change Image
        = f.file_field :profile_pic
    .col-md-6
      = link_to "Remove Image", "#",
        class: "btn btn-default fileinput-exists",
        id: "reset_profile_pic",
        data: { dismiss: "fileinput" }

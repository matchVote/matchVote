.row
  .col-md-8
    = render "breadcrumbs", rep: @rep

    .whitecard
      = image_tag @rep.profile_image_url, class: "profile_pic"
      = link_to "Leave Edit Mode", rep_path(@rep.slug),
        class: "btn btn-danger btn-sm pull-right"
      %div{data: { role: "biography_container" }}
        = render "bio_section", rep: @rep

    .whitecard= render "issue_comparison", issues: @issues

    .whitecard
      %h2 Recent News

    .whitecard#demographics= render "demographics", rep: @rep

  .col-md-4
    .well.first_widget
      %h3
        = "#{Random.rand(100)}%"
        Approval Rating
      %div
        %i Based on #{@rep.citizen_ratings_total} citizen ratings
      %br
      %a.btn.btn-danger
        Rate #{@rep.nickname_or_first_name}
      %a.btn.btn-default
        Read Comments

    .well.widget
      %h3
        Connect with #{@rep.nickname_or_first_name}
      %strong #{@rep.government_role} #{@rep.first_name} #{@rep.last_name}
      %br
      - @rep.contact.postal_addresses.each do |address|
        = address.line1
        %br
        = address.city_state_zip
      %br
      - @rep.contact.phone_numbers.each do |number|
        %span.glyphicon.glyphicon-phone-alt
        = number
      %br
      - if @rep.contact.contact_url
        = button_tag id: "contact_button", class: "btn btn-default" do
          = link_to "Contact", @rep.contact.contact_url, target: "_blank"
      %br
      %br
      = link_to "Facebook", @rep.facebook_url, target: "_blank",
        class: "btn btn-default btn-sm"
      = link_to "Twitter", @rep.twitter_url, target: "_blank",
        class: "btn btn-default btn-sm"
      = link_to "YouTube", @rep.youtube_url, target: "_blank",
        class: "btn btn-default btn-sm"

    .well.widget
      %h3 Top Donors
      %br
      %table.table.table-striped
        %tr
          %td.col-md-6 Donor 1
          %td.col-md-6 $1,500,000
        %tr
          %td.col-md-6 Donor 2
          %td.col-md-6 $1,000,000
        %tr
          %td.col-md-6 Donor 3
          %td.col-md-6 $750,000

    .well.widget
      %h3 Interest Group Ratings

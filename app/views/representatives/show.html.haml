.row
  .col-md-8
    .profile_breadcrumbs
      = link_to "Directory", root_path
      >
      = link_to "Federal", "/?=Federal"
      >
      = link_to @rep.branch, "#"
      >
      = link_to @rep.government_role, "#"
      >
      = link_to @rep.full_name, "#"

    .whitecard
      = image_tag @rep.profile_image_url,
        class: "profile_pic"
      .profile_name
        = render "edit_button", rep: @rep if policy(@rep).edit?
        .btn.btn-default.pull-right
          %span.glyphicon.glyphicon-ok-circle
          Follow
        %h2= @rep.full_name
        = @rep.government_role
        | #{@rep.status}
        %br
        = @rep.party
        from #{@rep.state}
      .profile_bio
        %p= truncate(@rep.biography, length: 550)
        %a.btn.btn-sm.btn-default.bio_btn
          Read Full Bio

    .whitecard= render "issue_comparison", issues: @issues

    .whitecard
      %h2 Recent News

    .whitecard
      %h2 #{@rep.nickname_or_first_name}'s Demographics
      %br
      %table.table.table-hover
        %tr
          %td.col-md-3 Gender
          %td= @rep.gender
        %tr
          %td.col-md-3 Age
          %td= @rep.age
        %tr
          %td Birthday
          %td= @rep.birthday_formatted
        %tr
          %td Religion
          %td= @rep.religion
        %tr
          %td Orientation
          %td= @rep.orientation

  .col-md-4
    .well.first_widget
      %h3
        = "#{Random.rand(100)}%"
        Approval Rating
      %div
        %i Based on #{@rep.citizen_ratings_total} citizen ratings
      %br
      %a.btn.btn-danger
        Rate #{@rep.nickname_or_first_name}
      %a.btn.btn-default
        Read Comments

    .well.widget
      %h3
        Connect with #{@rep.nickname_or_first_name}
      %strong #{@rep.title} #{@rep.nickname_or_first_name} #{@rep.last_name}
      %br
      - @rep.contact.postal_addresses.each do |address|
        = address.line1
        %br
        = address.city_state_zip
      %br
      - @rep.contact.emails_or_contact_form_url.each do |url|
        = url
      %br
      - @rep.contact.phone_numbers.each do |number|
        %span.glyphicon.glyphicon-phone-alt
        = number
        %br
      %br
      = link_to "Facebook", @rep.facebook_url, target: "_blank",
        class: "btn btn-default btn-sm"
      = link_to "Twitter", @rep.twitter_url, target: "_blank",
        class: "btn btn-default btn-sm"
      = link_to "YouTube", @rep.youtube_url, target: "_blank",
        class: "btn btn-default btn-sm"

    .well.widget
      %h3 Top Donors
      %br
      %table.table.table-striped
        %tr
          %td.col-md-6 Donor 1
          %td.col-md-6 $1,500,000
        %tr
          %td.col-md-6 Donor 2
          %td.col-md-6 $1,000,000
        %tr
          %td.col-md-6 Donor 3
          %td.col-md-6 $750,000

    .well.widget
      %h3 Interest Group Ratings
